<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContainerNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        app:shimmer_auto_start="true"
        app:shimmer_base_color="#16000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/native_ad_question_bg_color"
        android:layoutDirection="ltr"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingTop="@dimen/_14sdp">

        <!--<com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ad_app_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ad_app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_call_to_action"
            app:roundPercent="0.1" />

        <TextView
            android:id="@+id/ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:background="@drawable/bg_radius_4"
            android:backgroundTint="@color/selected_txt_clr"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ad_app_icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ad_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="invisible"
            android:text="@tools:sample/lorem/random"
            android:textColor="@color/native_ad_title_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ad_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ad_label"
            app:layout_constraintTop_toTopOf="@id/ad_label" />

           <TextView
               android:id="@+id/ad_body"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_4sdp"
               android:ellipsize="end"
               android:lineSpacingExtra="@dimen/_4sdp"
               android:maxLength="90"
               android:visibility="invisible"
               android:maxLines="2"
               android:text="@tools:sample/lorem/random"
               android:textColor="@color/native_ad_body_text_color"
               android:textSize="14sp"
               app:layout_constraintEnd_toEndOf="@id/ad_headline"
               app:layout_constraintStart_toStartOf="@+id/ad_label"
               app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/native_call_action_btn_bg"
            android:gravity="center"
            android:text="TÌM HIỂU thêm"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_body" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
