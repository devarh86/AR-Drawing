<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/container_clr_activity"
    tools:context="com.fahad.newtruelovebyfahad.ui.activities.pro.OfferPanelActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/_5sdp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pro_cross" />

    <TextView
        android:id="@+id/before_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Only"
        android:fontFamily="@font/robotom"
        android:textColor="@color/tab_txt_clr"
        android:textColorLink="@color/selected_color"
        android:textSize="@dimen/_18sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/cancel_txt"
        app:layout_constraintEnd_toStartOf="@+id/price_txt" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/robotom"
        android:gravity="center"
        android:text="$1.79"
        android:textColor="@color/tab_txt_clr"
        android:textColorLink="@color/selected_color"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/cancel_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/after_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="/ Year"
        android:fontFamily="@font/robotom"
        android:textColor="@color/tab_txt_clr"
        android:textColorLink="@color/selected_color"
        android:textSize="@dimen/_18sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/cancel_txt"
        app:layout_constraintStart_toEndOf="@+id/price_txt" />

    <TextView
        android:id="@+id/cancel_txt"
        style="@style/headingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/subscription_detail"
        android:textColor="@color/tab_txt_clr"
        android:textColorLink="@color/selected_color"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/continue_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/continue_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/pro_save_and_share_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Claim Offer"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/privacy_policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/term_of_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/term_of_use"
        android:textColor="@color/tab_txt_clr"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="@dimen/_2sdp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:background="@color/tab_txt_clr"
        app:layout_constraintBottom_toBottomOf="@+id/term_of_use"
        app:layout_constraintEnd_toStartOf="@+id/privacy_policy"
        app:layout_constraintStart_toEndOf="@+id/term_of_use"
        app:layout_constraintTop_toTopOf="@+id/term_of_use"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="@color/tab_txt_clr"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/term_of_use"
        app:layout_constraintEnd_toStartOf="@+id/line_2"
        app:layout_constraintStart_toEndOf="@+id/line_1"
        app:layout_constraintTop_toTopOf="@+id/term_of_use" />

    <View
        android:id="@+id/line_2"
        android:layout_width="@dimen/_2sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_3sdp"
        android:background="@color/tab_txt_clr"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/privacy_policy"
        app:layout_constraintEnd_toStartOf="@+id/cancel_pro"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/privacy_policy"
        app:layout_constraintTop_toTopOf="@+id/privacy_policy" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cancel_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:clickable="false"
        android:drawablePadding="@dimen/_15sdp"
        android:text="@string/cancel_subscription"
        android:textColor="@color/tab_txt_clr"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/privacy_policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/line_2"
        app:layout_constraintTop_toTopOf="@+id/privacy_policy" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">

        <TextView
            android:id="@+id/percentage_txt"
            style="@style/headingText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/robotom"
            android:gravity="center"
            android:text="40"
            android:textColor="#3A55FF"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/_150sdp"
            app:autoSizeMinTextSize="@dimen/_12sdp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/percent_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65" />

        <ImageView
            android:id="@+id/percent_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/percent_off"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@id/percentage_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/percentage_txt"
            app:layout_constraintTop_toTopOf="@id/percentage_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/robotom"
        android:text="Discount Offer"
        android:textColor="@color/tab_txt_clr"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/close_btn" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/robotom"
        android:text="@string/what_we_offer_in_discount_plan"
        android:textColor="@color/tab_txt_clr"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/price_txt"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/offer_panel_features" />
</androidx.constraintlayout.widget.ConstraintLayout>