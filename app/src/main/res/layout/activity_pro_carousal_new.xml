<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/container_clr_activity"
        tools:context=".ui.activities.pro.ProCarousalNew"
        android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_pro_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_star_pro"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/close_btn" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/upgradeTv"
            style="@style/headingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/upgrade_to_premium"
            android:textColor="@color/normal_txt_clr"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView32" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/unlockTv"
            style="@style/headingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:text="@string/unlock_the_full_experience"
            android:textColor="#9CA3AF"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upgradeTv" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unlockTv"
            app:layout_constraintBottom_toTopOf="@id/bottom_lay_prices">
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_16_dp"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unlockTv">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/ic_feature_1"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:gravity="center|start"
                    android:text="@string/unlock_all_premium_templates"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_feature_2"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:gravity="center|start"
                    android:text="@string/priority_access_to_new_features"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/ic_feature_3"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:gravity="center|start"
                    android:text="@string/access_all_style_categories"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/ic_feature_4"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:gravity="center|start"
                    android:text="@string/one_tap_carousel_creator"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_feature_5"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:gravity="center|start"
                    android:text="@string/quality_export_without_watermark"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_feature_6"
                    android:drawableEnd="@drawable/ic_tick_pro"
                    android:drawablePadding="12dp"
                    android:gravity="center|start"
                    android:text="@string/ad_free_creative_experience"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

        </ScrollView>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_lay_prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/monthLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/border_selected_pro"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/weekLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subheadingMonth"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/trialTextMonth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/trialTextMonth"
                    android:fontFamily="@font/inter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_days_free_trial"
                    android:textColor="#9CA3AF"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subheadingMonth" />

                <TextView
                    android:id="@+id/subheadingPriceMonth"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="$30"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weekLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/border_selected_pro"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/yearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subheading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/trialText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/trialText"
                    android:fontFamily="@font/inter"
                    android:layout_width="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_days_free_trial"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subheading" />
<!--9CA3AF-->
                <TextView
                    android:id="@+id/subheadingPrice"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="$10"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/yearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/border_unselected_pro"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/trusted_user_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subheadingYearly"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/yearly"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/trialTextYearly"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/trialTextYearly"
                    android:fontFamily="@font/inter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_7_days_free_trial"
                    android:textColor="#9CA3AF"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subheadingYearly" />

                <TextView
                    android:id="@+id/subheadingPriceYearly"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="$30"
                    android:textColor="@color/normal_txt_clr"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/like_layout"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_9dp"
                android:backgroundTint="#2563EB"
                android:layoutDirection="ltr"
                android:paddingHorizontal="@dimen/_7sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="Most Popular"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@+id/weekLayout"
                app:layout_constraintEnd_toEndOf="@+id/weekLayout"
                app:layout_constraintTop_toTopOf="@+id/weekLayout" />

            <TextView
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_9dp"
                android:backgroundTint="#DD831C"
                android:layoutDirection="ltr"
                android:paddingHorizontal="@dimen/_7sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="37% OFF"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/monthLayout"
                app:layout_constraintEnd_toEndOf="@+id/monthLayout"
                app:layout_constraintTop_toTopOf="@+id/monthLayout" />
            <TextView
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_9dp"
                android:backgroundTint="#C72E32"
                android:layoutDirection="ltr"
                android:paddingHorizontal="@dimen/_7sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="75% OFF"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/yearLayout"
                app:layout_constraintEnd_toEndOf="@+id/yearLayout"
                app:layout_constraintTop_toTopOf="@+id/yearLayout" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/trusted_user_txt"
                android:fontFamily="@font/inter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/trusted_by_2m_users_worldwide"
                android:textColor="#9CA3AF"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/heading"/>


            <TextView
                android:id="@+id/heading"
                style="@style/headingTextOnBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_50dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:padding="18dp"
                android:text="@string/try_for_free"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintBottom_toTopOf="@+id/subText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subText"
                style="@style/subHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:text="Try 3 days for free, then $20/week"
                android:textColor="@color/normal_txt_clr"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/cancel_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/cancel_txt"
                style="@style/headingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:alpha="0.8"
                android:gravity="center"
                android:text="@string/subscription_detail"
                android:textColor="#9CA3AF"
                android:textColorLink="#F76B1C"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/term_of_use"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/term_of_use"
                style="@style/subHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.8"
                android:text="@string/term_of_use"
                android:textColor="#9CA3AF"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/line_1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/line_1"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:background="#9CA3AF"
                app:layout_constraintBottom_toBottomOf="@+id/term_of_use"
                app:layout_constraintEnd_toStartOf="@+id/privacy_policy"
                app:layout_constraintStart_toEndOf="@+id/term_of_use"
                app:layout_constraintTop_toTopOf="@+id/term_of_use"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/privacy_policy"
                style="@style/subHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/privacy_policy"
                android:textColor="#9CA3AF"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/term_of_use"
                app:layout_constraintEnd_toStartOf="@+id/line_2"
                app:layout_constraintStart_toEndOf="@+id/line_1"
                app:layout_constraintTop_toTopOf="@+id/term_of_use" />

            <View
                android:id="@+id/line_2"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="#9CA3AF"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/privacy_policy"
                app:layout_constraintEnd_toStartOf="@+id/cancel_pro"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/privacy_policy"
                app:layout_constraintTop_toTopOf="@+id/privacy_policy" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cancel_pro"
                style="@style/subHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:alpha="0.8"
                android:clickable="false"
                android:drawablePadding="@dimen/_15sdp"
                android:text="@string/cancel_subscription"
                android:textColor="#9CA3AF"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/privacy_policy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/line_2"
                app:layout_constraintTop_toTopOf="@+id/privacy_policy" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offer_weekly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        android:visibility="gone"
        android:background="#B3000000">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/offer_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>



        <View
            android:id="@+id/round_view"
            android:layout_width="0dp"
            android:background="@drawable/top_round_offer"
            app:layout_constraintTop_toTopOf="@id/offer_guide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/offer_price_wek"
            android:fontFamily="@font/inter_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="$2.5"
            android:textColor="#FFEA2E6E"
            android:textSize="@dimen/_20sdp"
