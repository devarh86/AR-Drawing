<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragments.drawing.DrawingFramesFragment">

    <View
        android:id="@+id/toolBar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/toolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolBar" />

    <TextView
        style="@style/TextOnHomeMedium"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ar_drawing"
        app:layout_constraintBottom_toBottomOf="@+id/toolBar"
        app:layout_constraintStart_toEndOf="@+id/backPress"
        app:layout_constraintTop_toTopOf="@+id/toolBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_tags_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/_30sdp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        tools:listitem="@layout/tags_row_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_tags_rv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frames_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="2"
            tools:itemCount="4"
            tools:listitem="@layout/staggered_screen_row_item_home" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_auto_start="false"
            app:shimmer_shape="linear">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/shimmer_view_1"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:background="@color/shimmer"
                    app:layout_constraintEnd_toStartOf="@+id/shimmer_view_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/shimmer_view_2"
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:background="@color/shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/shimmer_view_1"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/shimmer_view_3"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:background="@color/shimmer"
                    app:layout_constraintEnd_toStartOf="@+id/shimmer_view_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shimmer_view_1" />


                <View
                    android:id="@+id/shimmer_view_4"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:background="@color/shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/shimmer_view_3"
                    app:layout_constraintTop_toBottomOf="@+id/shimmer_view_2" />

                <View
                    android:id="@+id/shimmer_view_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:background="@color/shimmer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/shimmer_view_3"
                    app:layout_constraintStart_toStartOf="@+id/shimmer_view_3"
                    app:layout_constraintTop_toBottomOf="@+id/shimmer_view_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/try_now_placeholder"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:src="@drawable/ic_no_internet"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/no_result_found_tv"
            app:layout_constraintEnd_toEndOf="@id/no_result_found_tv"
            app:layout_constraintStart_toStartOf="@id/no_result_found_tv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/no_result_found_tv"
            style="@style/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/no_internet_connect_found_please_try_again"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>