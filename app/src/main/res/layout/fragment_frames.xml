<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/container_clr_activity"
    tools:context=".ui.fragments.frames.FramesFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/container_clr_activity"
            android:gravity="center">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/home_up_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_back_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/normal_txt_clr" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Choose Frame"
                        android:textAlignment="center"
                        android:textColor="@color/tab_txt_clr"
                        android:textSize="@dimen/_14sdp"
                        app:fontFamily="@font/robotom"
                        app:layout_constraintBottom_toBottomOf="@+id/home_up_btn"
                        app:layout_constraintStart_toEndOf="@+id/home_up_btn"
                        app:layout_constraintTop_toTopOf="@+id/home_up_btn" />

                    <ImageView
                        android:id="@+id/pro_btn"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="-4dp"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/title_name_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/title_name_tv"
                        />

<!--                    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                        android:id="@+id/pro_btn"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginVertical="@dimen/_3sdp"-->
<!--                        android:layout_marginEnd="8dp"-->
<!--                        android:background="@drawable/pro_btn_background"-->
<!--                        android:paddingStart="@dimen/_5sdp"-->
<!--                        android:paddingEnd="@dimen/_5sdp"-->
<!--                        app:layout_constraintBottom_toBottomOf="@+id/title_name_tv"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="@+id/title_name_tv">-->

<!--                        <com.airbnb.lottie.LottieAnimationView-->
<!--                            android:id="@+id/animView"-->
<!--                            android:layout_width="@dimen/_22sdp"-->
<!--                            android:layout_height="@dimen/_22sdp"-->
<!--                            app:layout_constraintBottom_toBottomOf="parent"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent"-->
<!--                            app:lottie_autoPlay="true"-->
<!--                            app:lottie_loop="true"-->
<!--                            app:lottie_rawRes="@raw/pro_tag_anim" />-->

<!--                    </androidx.constraintlayout.widget.ConstraintLayout>-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/category_tags_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginTop="8dp"
                        android:minHeight="@dimen/_30sdp"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_up_btn"
                        tools:listitem="@layout/tags_row_item" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/divider_line_clr"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/category_tags_rv" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frames_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/child_recycler_item"
                 />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/native_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/frames_rv"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/frames_rv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <include
                    android:id="@+id/rv_portrait_native_layout"
                    layout="@layout/native_layout_portrait_rv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/loading_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shimmer_auto_start="false"
                app:shimmer_shape="linear">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/shimmer_view_1"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/shimmer"
                        app:layout_constraintEnd_toStartOf="@+id/shimmer_view_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/shimmer_view_2"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/shimmer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/shimmer_view_1"
                        app:layout_constraintTop_toTopOf="parent" />


                    <View
                        android:id="@+id/shimmer_view_3"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/shimmer"
                        app:layout_constraintEnd_toStartOf="@+id/shimmer_view_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_1" />


                    <View
                        android:id="@+id/shimmer_view_4"
                        android:layout_width="0dp"
                        android:layout_height="280dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/shimmer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/shimmer_view_3"
                        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_2" />

                    <View
                        android:id="@+id/shimmer_view_5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/shimmer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/shimmer_view_3"
                        app:layout_constraintStart_toStartOf="@+id/shimmer_view_3"
                        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/try_now_placeholder"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/ic_no_internet"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/no_result_found_tv"
                app:layout_constraintEnd_toEndOf="@id/no_result_found_tv"
                app:layout_constraintStart_toStartOf="@id/no_result_found_tv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/no_result_found_tv"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                app:layout_constraintVertical_bias="0.55"
                android:text="@string/no_internet_connect_found_please_try_again"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
