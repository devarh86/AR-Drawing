<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_bg_20dp"
    android:padding="@dimen/_15sdp"
    tools:context=".ui.fragments.menu.MenuFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/true_love_frames"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:text="@string/tell_your_friend"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:drawableStartCompat="@drawable/ic_share"
        app:drawableTint="@color/btm_nav_icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rate_us_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:text="@string/rate_us"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:drawableStartCompat="@drawable/ic_rate_us"
        app:layout_constraintStart_toStartOf="@+id/share_tv"
        app:layout_constraintTop_toBottomOf="@+id/share_tv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/privacy_policy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:text="@string/privacy_policy"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:drawableStartCompat="@drawable/ic_privacy_policy"
        app:layout_constraintStart_toStartOf="@+id/rate_us_tv"
        app:layout_constraintTop_toBottomOf="@+id/rate_us_tv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/remove_ads_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:text="@string/remove_ads"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:drawableStartCompat="@drawable/ic_privacy_policy"
        app:layout_constraintStart_toStartOf="@+id/rate_us_tv"
        app:layout_constraintTop_toBottomOf="@+id/privacy_policy_tv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recommended_apps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/recommended_apps"
        app:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"
        app:cornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/remove_ads_tv"
        app:layout_constraintTop_toBottomOf="@+id/remove_ads_tv"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommended_apps_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommended_apps_btn"
        tools:listitem="@layout/recommended_apps_row_item" />

</androidx.constraintlayout.widget.ConstraintLayout>