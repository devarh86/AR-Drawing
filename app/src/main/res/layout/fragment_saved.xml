<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/container_clr_activity"
    tools:context=".ui.fragments.mywork.pager.childs.SavedFragment">

    <View
        android:id="@+id/toolbar_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_view"
        app:layout_constraintStart_toStartOf="@id/toolbar_view"
        app:layout_constraintTop_toTopOf="@id/toolbar_view" />

    <TextView
        android:id="@+id/heading_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/my_drawing"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14sdp"
        app:fontFamily="@font/robotom"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_view"
        app:layout_constraintEnd_toEndOf="@id/toolbar_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/back_img"
        app:layout_constraintTop_toTopOf="@id/toolbar_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_60sdp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_view"
        app:spanCount="2"
        tools:listitem="@layout/staggered_screen_row_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/try_now_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/try_now_placeholder_1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/my_work_placeholder"
            app:layout_constraintBottom_toTopOf="@+id/no_result_found_tv"
            app:layout_constraintEnd_toEndOf="@+id/try_now_btn"
            app:layout_constraintStart_toStartOf="@+id/try_now_btn" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/no_result_found_tv"
            style="@style/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/there_s_no_any_saved_data"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toTopOf="@+id/try_now_btn"
            app:layout_constraintEnd_toEndOf="@+id/try_now_btn"
            app:layout_constraintStart_toStartOf="@+id/try_now_btn" />

        <TextView
            android:id="@+id/try_now_btn"
            style="@style/headingTextOnBoarding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/rounded_red_btn_bg"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:text="@string/go_to_drawings"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>