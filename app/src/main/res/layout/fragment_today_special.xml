<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.feature.pager.childs.TodaySpecialFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/today_special_tags_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/_25sdp"
        android:paddingStart="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/today_special_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/tags_row_item" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/search_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/search_bg"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_search"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/today_special_tags_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/today_special_tags_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/today_special_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_special_tags_rv"
        app:spanCount="2"
        tools:listitem="@layout/staggered_screen_row_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_internet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/try_now_placeholder"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:src="@drawable/ic_no_internet"
            app:layout_constraintBottom_toTopOf="@+id/no_result_found_tv"
            app:layout_constraintEnd_toEndOf="@+id/no_result_found_tv"
            app:layout_constraintStart_toStartOf="@+id/no_result_found_tv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/no_result_found_tv"
            style="@style/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_internet_connect_found_please_try_again"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/native_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.5"
        android:visibility="gone"
        android:paddingHorizontal="2dp"
        app:layout_constraintEnd_toEndOf="@+id/today_special_rv"
        app:layout_constraintStart_toStartOf="@+id/today_special_rv"
        app:layout_constraintTop_toTopOf="@+id/today_special_rv">

        <include
            android:id="@+id/rv_portrait_native_layout"
            layout="@layout/native_layout_portrait_rv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>