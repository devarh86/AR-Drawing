<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomStyleBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <style name="TextOnHomeBold">
        <item name="fontFamily">@font/parkinsans_bold</item>
        <item name="android:textColor">@color/selected_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextOnHomeMedium">
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/selected_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

</resources>