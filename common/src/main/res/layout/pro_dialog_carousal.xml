                        android:text="/Month"
                        android:textColor="@color/normal_txt_clr"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/weekly_plan_price_c"
                        app:layout_constraintBottom_toTopOf="@id/weekly_plan_trail_c"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/weekly_plan_price_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
