<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_270sdp">

    <!--    android:background="@drawable/bg_gradient_pop_up"-->



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/frame_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:src="@drawable/valentine_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/close_img"
        app:round="20dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/feature_pop_anim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame_img"
        app:layout_constraintEnd_toEndOf="@id/frame_img"
        app:layout_constraintStart_toStartOf="@id/frame_img"
        app:layout_constraintBottom_toBottomOf="@id/frame_img"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/f_edit_anim_lotti" />

    <TextView
        android:id="@+id/apply_now"
        style="@style/headingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@drawable/rounded_9dp"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/try_now"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_img" />


    <ImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pro_cross" />



</androidx.constraintlayout.widget.ConstraintLayout>