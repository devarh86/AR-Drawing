<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="FullScreenTheme" parent="Theme.NewTrueLoveByFahad">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/container_clr_activity</item>
        <item name="android:statusBarColor">@color/container_clr_activity</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/surface_clr</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="FullScreenThemeHideStatusBar" parent="Theme.NewTrueLoveByFahad">

        <!-- Edge to edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- IMPORTANT -->
        <item name="android:fitsSystemWindows">false</item>

        <!-- Cutout support -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="WholeFullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/container_clr_activity</item>
        <item name="android:statusBarColor">@color/container_clr_activity</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/surface_clr</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="FullScreenThemeForAd" parent="Theme.NewTrueLoveByFahad">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/container_clr_activity</item>
        <item name="android:statusBarColor">@color/container_clr_activity</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/surface_clr</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="Theme.NewTrueLoveByFahad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowBackground">@color/light_window_bg</item>
<!--        <item name="android:navigationBarColor">@color/primary_50</item>-->
<!--        <item name="android:statusBarColor">@color/primary</item>-->
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="bottomNavigationBackground">@color/bottom_nav_light</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/container_clr_activity</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/WholeFullScreenTheme</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
    </style>


    <style name="Theme.NewTrueLoveByFahad.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="android:statusBarColor">@color/selected_color</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>


    <style name="headingText">
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="android:fontFamily">@font/parkinsans_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="headingTextHome">
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="subHeadingText">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/parkinsans_medium</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/parkinsans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Theme.NewTrueLoveByFahad.Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewTrueLoveByFahad.Toolbar.Small" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme_transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>



    <style name="Theme.NewTrueLoveByFahad.TabLayout.TextAppearance.CamelCase" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/parkinsans_medium</item>
    </style>

<!-- <item name="android:textStyle">bold</item>-->

    <style name="MyCheckBoxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorControlHighlight">@color/selected_color</item>
        <item name="rippleColor">@color/selected_color</item>
        <item name="fontFamily">@font/parkinsans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/heading_txt</item>
    </style>
    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView_filter" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


    <style name="TransparentActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>

    </style>






</resources>