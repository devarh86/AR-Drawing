<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".main.fragment.BasePencilSketch">

    <androidx.camera.view.PreviewView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.abdul.pencil_sketch.utils.AdjustableFrameLayout
        android:id="@+id/frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.abdul.pencil_sketch.utils.ZoomableImageView
            android:id="@+id/fg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/frame_foreground"
            android:tag="fg_image"
            android:visibility="visible" />

    </com.abdul.pencil_sketch.utils.AdjustableFrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolBar"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/container_clr_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolBar" />

        <TextView
            android:id="@+id/doneBtn"
            style="@style/headingTextOnBoarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/rounded_red_btn_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fullMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18sdp"
            android:src="@drawable/ic_full_mode_off"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toStartOf="@+id/doneBtn"
            app:layout_constraintTop_toTopOf="@+id/toolBar" />

        <ImageView
            android:id="@+id/lockMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18sdp"
            android:src="@drawable/ic_zoom_unlock"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toStartOf="@+id/fullMode"
            app:layout_constraintTop_toTopOf="@+id/toolBar" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18sdp"
            android:src="@drawable/ic_music_off"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toStartOf="@+id/lockMode"
            app:layout_constraintTop_toTopOf="@+id/toolBar" />

        <TextView
            android:id="@+id/reset"
            style="@style/headingTextOnBoarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="@drawable/rounded_red_btn_bg"
            android:backgroundTint="#4B5563"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toStartOf="@+id/music"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.labstyle.darioscrollruler.DarioScrollRuler
            android:id="@+id/darioScrollRuler"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:visibility="gone"
            app:indicatorColor="#E83CB0"
            app:indicatorHeight="46dp"
            app:indicatorWidth="2dp"
            app:initialValue="0"
            app:majorTickHeight="46dp"
            app:maxValue="360"
            app:mediumTickHeight="30dp"
            app:minValue="-360"
            app:minorTickHeight="18dp"
            app:rulerBackgroundColor="@color/transparent"
            app:tickColor="#7A808D"
            app:tickSpacing="38dp"
            app:valueStep="1" />

        <LinearLayout
            android:id="@+id/rotationLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rotateLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_rotate_left" />

            <ImageView
                android:id="@+id/rotateRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_rotate_right" />

            <TextView
                android:id="@+id/rotateTV"
                style="@style/headingTextOnBoarding"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_22sdp"
                android:background="@drawable/full_rounded"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/flipVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_flip_vertical" />

            <ImageView
                android:id="@+id/flipHorizon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_flip_horizontal" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/seekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_12sdp">

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="245"
                android:paddingVertical="8dp"
                android:progress="245"
                android:progressBackgroundTint="@color/slider"
                android:progressDrawable="@drawable/seekbar"
                android:progressTint="@color/selected_color"
                android:thumb="@drawable/thumb_icon"
                android:valueFrom="0"
                android:valueTo="255"
                app:haloColor="@color/selected_color"
                app:labelBehavior="gone"
                app:layout_constraintBottom_toBottomOf="@+id/category_name"
                app:layout_constraintEnd_toStartOf="@+id/percentage_txt"
                app:layout_constraintStart_toEndOf="@+id/category_name"
                app:layout_constraintTop_toTopOf="@+id/category_name" />

            <TextView
                android:id="@+id/category_name"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opacity"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentage_txt"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255%"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@+id/category_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/category_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/seekBarLayoutCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_12sdp">

            <SeekBar
                android:id="@+id/seek_bar_Camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="245"
                android:paddingVertical="8dp"
                android:progress="245"
                android:progressBackgroundTint="@color/slider"
                android:progressDrawable="@drawable/seekbar"
                android:progressTint="@color/selected_color"
                android:thumb="@drawable/thumb_icon"
                android:valueFrom="0"
                android:valueTo="255"
                app:haloColor="@color/selected_color"
                app:labelBehavior="gone"
                app:layout_constraintBottom_toBottomOf="@+id/category_name_camera"
                app:layout_constraintEnd_toStartOf="@+id/percentage_txt_camera"
                app:layout_constraintStart_toEndOf="@+id/category_name_camera"
                app:layout_constraintTop_toTopOf="@+id/category_name_camera" />

            <TextView
                android:id="@+id/category_name_camera"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opacity"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentage_txt_camera"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255%"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@+id/category_name_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/category_name_camera" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_12sdp">

            <TextView
                android:id="@+id/pictureMode"
                style="@style/headingTextOnBoarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_picture_off"
                android:gravity="center"
                android:text="@string/picture"
                android:textColor="@color/text_color_drawing_screen"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/rotateMode"
                style="@style/headingTextOnBoarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_rotate_unselect"
                android:gravity="center"
                android:text="@string/rotate"
                android:textColor="@color/text_color_drawing_screen"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/cameraMode"
                style="@style/headingTextOnBoarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_camera_unselect"
                android:gravity="center"
                android:text="@string/camera"
                android:textColor="@color/text_color_drawing_screen"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/fullModeOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:src="@drawable/ic_full_mode"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="@+id/surfaceView" />

</androidx.constraintlayout.widget.ConstraintLayout>
